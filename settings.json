{
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "editor.matchBrackets": "never",
  "editor.hideCursorInOverviewRuler": true,
  "editor.overviewRulerBorder": false,
  "editor.roundedSelection": false,
  "editor.minimap.enabled": false,
  "editor.lineNumbers": "off",
  "editor.autoClosingBrackets": "never",
  "editor.formatOnSave": true,
  "editor.tabSize": 4,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": ["meta.function", "meta.class"],
        "settings": {
          "fontStyle": "bold"
        }
      }
    ]
  },
  "workbench.colorTheme": "GrunBoxTheme",
  "workbench.colorCustomizations": {
    "statusBar.foreground": "#c0c0c0",
    "statusBar.background": "#282828",
    "statusBar.noFolderBackground": "#282828",
    "statusBar.debuggingBackground": "#282828",
    "editorCursor.foreground": "#cecdcd",
    "terminalCursor.foreground": "#cecdcd"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1,
  "vim.vimrc.enable": true,
  "vim.leader": "<space>",
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.handleKeys": {
    "<C-j>": true,
    "<C-l>": false,
    "<C-k>": false,
    "<C-p>": false,
    "<C-a>": false,
    "<C-f>": true,
    "<C-c>": false
    // "<C-v>": false
  },

  "vim.useCtrlKeys": true,

  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    },
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["u"],
      "after": [],
      "commands": [
        {
          "command": "undo"
        }
      ]
    },
    {
      "before": ["r"],
      "after": [],
      "commands": [
        {
          "command": "redo"
        }
      ]
    },
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<leader>", "p"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.quickOpen"
        }
      ]
    },
    {
      "before": ["<leader>", "o"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.quickOpen"
        }
      ]
    },
    {
      "before": ["<leader>", "v"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.splitEditor"
        }
      ]
    },
    {
      "before": ["<leader>", "h"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.focusFirstEditorGroup"
        }
      ]
    },
    {
      "before": ["<leader>", "l"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.focusSecondEditorGroup"
        }
      ]
    },
    {
      "before": ["<C-n>"],
      "after": [],
      "commands": [
        {
          "command": ":nohl"
        }
      ]
    },
    {
      "before": ["<C-e>"],
      "after": [],
      "commands": [
        {
          "command": "workbench.files.action.focusFilesExplorer"
        }
      ]
    }
  ],
  "telemetry.telemetryLevel": "off",
  "extensions.ignoreRecommendations": true,
  "editor.cursorBlinking": "solid",
  "editor.inlineSuggest.enabled": true,
  "terminal.integrated.inheritEnv": false,
  "python.analysis.extraPaths": [],
  "breadcrumbs.enabled": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "go.toolsManagement.autoUpdate": true,
  "workbench.activityBar.location": "hidden",
  "vim.vimrc.path": "$HOME/.vimrc",
  "window.zoomLevel": 1
}
